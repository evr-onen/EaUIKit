{
  "name": "ea-kit",
  "version": "1.0.7",
  "description": "A comprehensive Vue 3 UI component library with TypeScript support",
  "type": "module",
  "main": "./dist/ea-kit.umd.js",
  "module": "./dist/ea-kit.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ea-kit.es.js",
      "require": "./dist/ea-kit.umd.js"
    },
    "./dist/ea-kit.css": "./dist/ea-kit.css",
    "./style.css": "./dist/ea-kit.css"
  },
  "keywords": ["vue", "vue3", "ui", "components", "typescript", "library"],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ea-kit.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ea-kit/issues"
  },
  "homepage": "https://github.com/yourusername/ea-kit#readme",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:lib": "vite build && node_modules\\.bin\\vue-tsc --project tsconfig.lib.json",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "pinia": "^2.3.0",
    "vite-svg-loader": "^5.1.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.4.49",
    "sass": "^1.83.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.3",
    "vite": "^6.0.5",
    "vite-plugin-svg-sprite": "^0.6.1",
    "vite-plugin-vue-devtools": "^7.6.8",
    "vue-tsc": "^2.1.10"
  }
}
